{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "types": ["svelte", "jest"],
    "esModuleInterop": true,
    "downlevelIteration": true,

    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
  }
}
